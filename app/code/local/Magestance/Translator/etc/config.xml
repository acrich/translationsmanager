<?xml version="1.0"?>
<config>
    <modules>
        <Magestance_Translator>
            <version>0.1.0</version>
        </Magestance_Translator>
    </modules>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Magestance_Translator before="Mage_Adminhtml">Magestance_Translator_Adminhtml</Magestance_Translator>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<translator module="translator">
				<title>Translations</title>
				<sort_order>71</sort_order>               
				<children>
					<manage module="translator">
						<title>Manage Translations</title>
						<sort_order>0</sort_order>
						<action>adminhtml/translator/manage</action>
					</manage>
					<pagescan module="translator">
						<title>Scan A Page</title>
						<sort_order>1</sort_order>
						<action>adminhtml/translator/pagescan</action>
					</pagescan>
					<migrate module="translator">
						<title>Do a Migration</title>
						<sort_order>2</sort_order>
						<action>adminhtml/translator/migrateCoreDb</action>
					</migrate>
					<sync module="translator">
						<title>Do a Sync</title>
						<sort_order>3</sort_order>
						<action>adminhtml/translator/importCsvFiles</action>
					</sync>
				</children>
			</translator>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Magestance_Translator>
							<title>Translator Module</title>
							<sort_order>10</sort_order>
						</Magestance_Translator>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>   
    <global>
        <models>
            <translator>
                <class>Magestance_Translator_Model</class>
                <resourceModel>translator_mysql4</resourceModel>
            </translator>
            <translator_mysql4>
                <class>Magestance_Translator_Model_Mysql4</class>
                <entities>
                    <cache>
                        <table>translator_cache</table>
                    </cache>
                 	<string>
                    	<table>translator_string</table>
                	</string>
                	<translation>
                    	<table>translator_translation</table>
                	</translation>
                	<path>
                    	<table>translator_path</table>
                	</path>
                </entities>
            </translator_mysql4>
            <core>
            	<rewrite>
            		<translate>Magestance_Translator_Model_Translate</translate>
            		<translate_string>Magestance_Translator_Model_Translate_String</translate_string>
            		<translate_inline>Magestance_Translator_Model_Translate_Inline</translate_inline>
            	</rewrite>
            </core>
        </models>
        <resources>
            <translator_setup>
                <setup>
                    <module>Magestance_Translator</module>
                    <class>Magestance_Translator_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </translator_setup>
            <translator_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </translator_write>
            <translator_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </translator_read>
        </resources>
        <blocks>
            <translator>
                <class>Magestance_Translator_Block</class>
            </translator>
        </blocks>
        <helpers>
            <translator>
                <class>Magestance_Translator_Helper</class>
            </translator>
        </helpers>
        <events>
      		<controller_front_send_response_after>
        		<observers>
        			<magestance_translator>
            			<type>singleton</type>
            			<class>Magestance_Translator_Model_Observer</class>
            			<method>notifyCompletion</method>
          			</magestance_translator>
        		</observers>
      		</controller_front_send_response_after>
      		<core_block_abstract_to_html_before>
        		<observers>
        			<magestance_translator>
            			<type>singleton</type>
            			<class>Magestance_Translator_Model_Observer</class>
            			<method>getBlockTemplate</method>
          			</magestance_translator>
        		</observers>
      		</core_block_abstract_to_html_before>  
    	</events>
    </global>
</config>